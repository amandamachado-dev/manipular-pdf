cat > .gitignore << 'EOF'
# Dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Production builds
/client/build
/server/dist

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Uploads and temporary files
/server/uploads/temp/*
!/server/uploads/temp/.gitkeep
/server/uploads/processed/*
!/server/uploads/processed/.gitkeep

# Logs
logs
*.log

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS generated files
.DS_Store
Thumbs.db
EOF